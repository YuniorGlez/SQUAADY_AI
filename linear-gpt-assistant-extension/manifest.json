{
    "manifest_version": 3,
    "name": "Linear GPT Assistant",
    "description": "An assistant for Linear powered by GPT-4.",
    "version": "0.1",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "permissions": ["activeTab", "storage", "http://*/*", "https://*/*"],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
